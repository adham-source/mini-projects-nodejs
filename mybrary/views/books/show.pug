a(href="/") Back 
h2= book.title
img(
    width="100",
    height="150",
    src=`${book.coverImagePath}`
    alt=`${book.title}`,
    title=`${book.title}`
)
div 
    | Author : #{book.author.name}
div 
    | Publish Date : #{book.publishDate.toDateString()}
div 
    | Page Count :  #{book.pageCount}
if book.description
    div 
        | Description : #{book.description}

a(href=`/books/${book.id}/edit`) Edit
include ../partials/deleteForm.pug
+deleteForm(`/books/${book.id}`)
a(href=`/authors/${book.author.id}`) View Author  