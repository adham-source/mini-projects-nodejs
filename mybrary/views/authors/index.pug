extends ../layouts/layout
block content 
    h2 search authors
    form(action="/authors", method="GET") 
        div 
            lable Name 
            input(type="text", name="name" value=`${searchOptions.name ? searchOptions.name: ''}`)/
        div 
            button(type="submit") Search
    div 
        each author in authors 
            p= author.name
            a(href=`/authors/${author.id}`) View 
            a(href=`/authors/${author.id}/edit`) Edit
            include ../partials/deleteForm.pug
            +deleteForm(`/authors/${author.id}`)
        else 
            p There are no authors